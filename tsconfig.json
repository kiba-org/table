{
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "target": "ES2022",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "jsx": "react",
    "allowUmdGlobalAccess": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts"]
}